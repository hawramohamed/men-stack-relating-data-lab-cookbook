<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <% if (pantry.length > 0){ %>
        <ul>
           <% pantry.forEach(item => { %>
                <li><%= item.name %> - <%= item.quantity %> <%= item.unit %>
                    (expires on <%= item.expiration.toDateString() %>)
                    <% if (item.notes) { %> â€” <em><%= item.notes %></em><% } %>

                    <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
                     <button type="submit">Delete</button>
                    </form>

                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>There are no items in this pantry.</p>
    <% }; %>
    <a href="foods/new">Add New Item</a>
  </body>
</html>
